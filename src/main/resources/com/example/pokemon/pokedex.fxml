<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pokemon.Pokedex"
            prefHeight="400.0" prefWidth="600.0">

    <!-- 输入和操作区域 -->
    <HBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="50.0" prefWidth="500.0">
        <Button text="返回" onAction="#goBack"/>
        <TextField fx:id="inputField" promptText="请输入宝可梦..."/>
        <Button text="查询" onAction="#find"/>
    </HBox>

    <!-- 显示内容区域 -->
    <TextArea fx:id="displayArea" wrapText="true" layoutX="50.0" layoutY="150.0" prefWidth="500.0" prefHeight="230.0" editable="false" />

</AnchorPane>
